<div class="card" style="width: 18rem;">
    {% if animal.photoPath is not null %}
        <img src="{{ asset('uploads/animals/' ~ animal.photoPath) }}" class="card-img-top" alt="animal">
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">{{ animal.name }}</h5>
        <p class="card-text{% if animal.note is empty %} text-secondary{% endif %}">{{ animal.note|default('<Pas de note>') }}</p>
        <p>
            <strong>Propriétaire:</strong> {{ current_client.lastName|upper }} {{ current_client.firstName }}
        </p>
        <p>
            <strong>Téléphone (Client):</strong> <span
                    class="{% if client.tel is null %}text-secondary{% endif %}">{{ client.tel|default('<Rien>') }}</span>
        </p>
    </div>
</div>