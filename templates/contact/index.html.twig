{% extends 'base.html.twig' %}

{% block title %}Take'A'Vet - Mes animaux{% endblock %}

{% block main %}
    <div class="main-content">
        <h1 class="title">Nous contacter</h1>
        <div class="main-content__home">
            <div class="contact_networks_icones">
                <div class="contact_main">
                    <h5 class="title_form">Contacter le service</h5>
                    <div class="contact_contacting">
                    <form>
                        <div class="email_and_subject">
                            <label for="email">Email</label>
                            <input type="email" placeholder="vous@example.com" class="input_mail" required>
                            <label for="subject">Sujet</label>
                            <input type="text" class="input_subject" placeholder="Sujet : Salut Take'A'Vet !" required>
                        </div>
                        <div class="textarea_and_button">
                            <div class="label_message">
                                <label for="message" class="label_msg">Message</label>
                                <textarea name="message" id="message" cols="20" rows="5" placeholder="Votre message..." required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary button_form">Envoyer</button>
                        </div>
                    </form>
                    </div>
                </div>
                <div class="networks_icones">
                    <h5 class="title_form">Réseaux sociaux</h5>
                    <div class="networks_icones__icones">
                        <a href="https://www.facebook.com/takeavet/" target="_blank"><i class="fab fa-facebook-square"></i></a>
                        <a href="https://www.instagram.com/takeavet/" target="_blank"><i class="fab fa-instagram"></i></a>
                        <a href="https://twitter.com/takeavet" target="_blank"><i class="fab fa-twitter-square"></i></a>
                    </div>
                </div>
            </div>
            <div class="networks_main">
                <h5 class="title_form">Où nous trouver?</h5>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2604.10167310515!2d4.03153917619462!3d49.2555187726778!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e975ad3ce7cfd1%3A0x6e49dffffc187bf8!2sPlace%20Royale!5e0!3m2!1sfr!2sfr!4v1672841099021!5m2!1sfr!2sfr" width="300" height="250" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                <div class="address_takeavet">
                    <p>Take'A'Vet</p>
                    <p>Vétérinaire XXXXXXXXXXXXXXXXXXXXXXXXX</p>
                    <p>8 Allée de la Pacific
                    <br>XX XX XXX,
                    <br>XX XX XX XX XX</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}